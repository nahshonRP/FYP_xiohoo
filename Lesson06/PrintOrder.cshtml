@model CakeOrder
@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <title>Cake Order Form</title>
    <style>
        .label {
            font-size: large;
            font-weight: bold;
            font-family: Arial;
        }

        .item {
            font-size: large;
            font-family: Arial;
        }

        .lineitem {
            height: 1cm;
        }
    </style>
</head>
<body>
    <header>
        <table style="border-width:thick;width:100%">
            <tr>
                <td style="width:3cm"><img src="~/images/logo.png" style="width:3cm"></td>
                <td style="width:1cm"></td>
                <td>
                    <h1>Cake Order Form</h1>
                    <address>
                        <p>
                            <span style="font-size:x-large;font-family:'Bookman Old Style'">Cadeau Online Gift Shop</span><br />
                            Shanker Tekri Udoygnagar<br />478963 Jamnagar, Singapore
                        </p>
                    </address>
                </td>
                <td style="text-align:right;vertical-align:bottom">
                    <span style="font-size:x-large;font-weight:bold;font-family:'Arial Rounded MT'">User: @Model.UserCodeNavigation.Name</span>
                </td>
            </tr>
        </table>
    </header>
    <hr />
    <article style="border:solid">
        <table style="width:100%">
            <tr>
                <td>
                    <table style="position:relative;left:2cm">
                        <tr class="lineitem">
                            <td class="label">Order Id</td>
                            <td class="label">:</td>
                            <td class="item">@Model.Id</td>
                        </tr>
                        <tr class="lineitem">
                            <td class="label">Color</td>
                            <td class="label">:</td>
                            <td class="item">@Model.Flavor</td>
                        </tr>
                        <tr class="lineitem">
                            <td class="label">Pokedex</td>
                            <td class="label">:</td>
                            <td class="item">@Model.Pokedex.Name</td>
                        </tr>
                        <tr class="lineitem">
                            <td class="label">Price</td>
                            <td class="label">:</td>
                            <td class="item">SGD 10.00</td>
                        </tr>
                        <tr class="lineitem">
                            <td class="label">Quantity</td>
                            <td class="label">:</td>
                            <td class="item">@Model.Qty</td>
                        </tr>
                        <tr class="lineitem">
                            <td class="label">Total Amount</td>
                            <td class="label">:</td>
                            <td class="item">@String.Format("SGD {0:0.00}", Model.Qty * 30)</td>
                        </tr>
                    </table>
                </td>

                <td style="width:10cm">
                    <div style="position:relative;align-self:center;width:auto">
                        <img id="imgCake" style="position:relative;left:0;top:0;background-color:@Model.Flavor" src="~/images/cake.png" />
                        <img id="imgPoke" src="@String.Format(@"/images/{0}-200.png",Model.PokedexId)" style="position:absolute;left:20px;top:70px;height:180px;width:180px" />
                        <div id="divGreet" style="position:absolute;right:170px;top:160px;height:80px;width:80px">@Model.Greeting</div>
                    </div>
                </td>
            </tr>
        </table>
    </article>
    <aside>
        <h1><span>Additional Notes</span></h1>
        <div>
            <p>Uncollected items will be kept for only 1 week then will dispatched to our retail outlets for sales.</p>
        </div>
    </aside>
</body>
</html>
