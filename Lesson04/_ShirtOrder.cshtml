@model ShirtOrder

<div class="form-group row">
    <label class="col-4 control-label text-sm-right" for="Name">Name</label>
    <div class="col-6">
        <input class="form-control" type="text" id="Name" name="Name" value="" />
    </div>
</div>
<div class="form-group row">
    <label class="col-4 control-label text-sm-right" for="Color">Color</label>
    <div class="col-8">
        <input type="radio" id="rdColor1" value="white" checked="checked" name="Color" /> White
        <input type="radio" id="rdColor2" value="crimson" name="Color" /> Crimson
        <input type="radio" id="rdColor3" value="khaki" name="Color" /> Khaki
        <input type="radio" id="rdColor4" value="linen" name="Color" /> Linen
    </div>
</div>
<div class="form-group row">
    <label class="col-4 control-label text-sm-right" for="Price">Price</label>
    <div class="col-6">
        <input class="form-control" type="text" data-val="true" data-val-number="The field Price must be a number." data-val-required="The Price field is required." id="Price" name="Price" value="" />
    </div>
</div>
<div class="form-group row">
    <label class="col-4 control-label text-sm-right" for="PokedexId">Pokedex</label>
    <div class="col-6">
        <select id="ddlPoke" class="form-control col-6" asp-for="PokedexId"
                asp-items="@((SelectList)ViewData["pokes"])">
            <option value="0"> --SELECT-- </option>
        </select>
    </div>
</div>
<div class="form-group row">
    <label class="col-4 control-label text-sm-right" for="FrontPosition">Logo Position (Front)</label>
    <div class="col-7">
        <input id="rdPosLeft" type="radio" value="0" checked="checked" data-val="true" data-val-required="The FrontPosition field is required." name="FrontPosition" /> Left
        <input id="rdPosRight" type="radio" value="1" name="FrontPosition" /> Right
    </div>
</div>
<div class="form-group row">
    <label class="col-4 control-label text-sm-right" for="Qty">Qty</label>
    <div class="col-6">
        <input class="form-control" type="number" data-val="true" data-val-required="The Qty field is required." id="Qty" name="Qty" value="" />
    </div>
</div>
