@model CourseMangement.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        @if (ViewData["Error"] != null)
        {
            <span class="alert alert-danger">@ViewData["Error"]</span>
        }
        @if (ViewData["Message"] != null)
        {
            <span class="alert alert-success">@ViewData["Message"]</span>
        }

        <form asp-action="Profile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="form-group col-md-4">
                    <label asp-for="FullName" class="control-label">Name</label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="RoleName" class="control-label">Role</label>
                    <input asp-for="RoleName" class="form-control" readonly required/>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DOB" class="control-label"></label>
                    <input type="date" asp-for="DOB" class="form-control" required />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="PlainPassword" class="control-label">Password</label>
                    <input asp-for="PlainPassword" class="form-control" required />
                    <span asp-validation-for="PlainPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" class="form-control" readonly />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="email" asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-md-4" style="margin-left:20px">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="UserStatus" /> @Html.DisplayNameFor(model => model.UserStatus)
                    </label>
                </div>


            </div>
            <div class="form-group" style="margin-top:20px;margin-bottom:20px;padding:5px">
                <input type="submit" value="Update Profile" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}