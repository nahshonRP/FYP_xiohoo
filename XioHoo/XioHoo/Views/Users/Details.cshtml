@model CourseMangement.Models.ApplicationUser
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h1>Create</h1>

<h4>ApplicationUser</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="form-group col-md-4">
                    <label asp-for="FullName" class="control-label">Name</label>
                    <input asp-for="FullName" class="form-control" disabled/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="RoleName" class="control-label">Role</label>
                    <select asp-for="RoleName" class="form-control" asp-items="ViewBag.RoleName" disabled></select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DOB" class="control-label">Date of Birth<</label>
                    <input asp-for="DOB" class="form-control" disabled/>
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PlainPassword" class="control-label">Password</label>
                    <input asp-for="PlainPassword" class="form-control" disabled/>
                    <span asp-validation-for="PlainPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" class="form-control" disabled/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control"disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-md-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="UserStatus"  disabled/> @Html.DisplayNameFor(model => model.UserStatus)
                    </label>
                </div>


            </div>

        </form>
    </div>
</div>

