
@model CourseMangement.Models.ViewModels.UserLogin

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 2 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Deosai Admin</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- themify css -->
    <link rel="stylesheet" type="text/css" href="~/css/themify/themify-icons.css">
    <!-- custom style css -->
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
    <!-- Demo styles -->
</head>
<body>
   
    <section class="login-outer-wrapper">
        <div class="login-top-bg"></div>
        
        <div class="login-bottom-bg"></div>
        
        <form asp-action="Login">
            <div class="login">
                <div class="login-head">
                    <h2>XioHoo <span>Course Management</span></h2>
                    <p>login</p>
                </div>
                
                <div class="login-credential-wrapper">
                    <div class="login-input-wrapper clearfix">
                        <div class="icon-box">
                            <i class="ti-email"></i>
                        </div>
                        
                        <div class="input-box">
                            <input type="text" asp-for="UserName" placeholder="Username">
                        </div>
                    </div>
                </div>
                
                <div class="login-credential-wrapper">
                    <div class="login-input-wrapper clearfix">
                        <div class="icon-box">
                            <i class="ti-lock"></i>
                        </div>
                        
                        <div class="input-box">
                            <input type="password" asp-for="Password" placeholder="password">
                        </div>
                       
                    </div>
                    <span style="font-size:12px;color:red" class="error-message">@ViewBag.message</span>
                    
                    
                </div>
                <div class="btn-wrapper-sign">
                    <button type="submit" class="btn sign-in-btn">Sign in</button>
                </div>
            </div>
        </form>


    </section>
   
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <!-- bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- apexcharts -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <!-- datatable -->
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    
</body>

</html>