@model CourseMangement.Models.ApplicationUser

@{
    ViewData["Title"] = "Create";
}

<h1></h1>

<h4>Register Yourself</h4>
<hr />
<hr />
<div class="row">
    <div class="col-md-12">
        <div style="margin-bottom:30px;margin-top:20px;">
            @if (ViewData["Error"] != null)
            {
                <span class="alert alert-danger">@ViewData["Error"]</span>
            }
            @if (ViewData["Message"] != null)
            {
                <span class="alert alert-success">@ViewData["Message"]</span>
            }
        </div>

        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <input type="hidden" asp-for="PhoneNumber" />
                <div class="form-group col-md-4">
                    <label asp-for="FullName" class="control-label">Name</label>
                    <input asp-for="FullName" class="form-control" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DOB" class="control-label">Date Of Birth</label>
                    <input type="date" asp-for="DOB" class="form-control" required />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="PlainPassword" class="control-label">Password</label>
                    <input asp-for="PlainPassword" class="form-control" required />
                    <span asp-validation-for="PlainPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" class="form-control" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="email" asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group" style="margin-top:20px;margin-bottom:20px;padding:5px">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}