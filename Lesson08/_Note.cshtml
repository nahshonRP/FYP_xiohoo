<form asp-controller="RPNotes" asp-action="SaveNotes" method="post" 
      class="form-horizontal" role="form">
    <hr />
    <div class="form-group row">
        <label class="control-label col-3" 
               style="text-align:left">Module Id:</label>
        <input readonly="readonly" asp-for="@Model.ModuleId"
               class="form-control-plaintext no-border col-2" style="border: 0" />

        <label class="col-offset-1 control-label col-2" 
               style="text-align:left">Lesson: </label>
        <input readonly="readonly"  asp-for="@Model.LessonId"
               class="form-control-plaintext col-1" style="border: 0" />
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-3"
               style="text-align:left">Module Name:</label>
        <input readonly="readonly" asp-for="@Model.Module.Name"
               class="form-control-plaintext col-sm-6" style="border: 0; text-align:left" />
    </div>

    <hr />
    <div class="form-group row">
        <label class="control-label col-1" style="text-align:left">Notes:</label>
        <textarea asp-for="@Model.Notes" class="form-control" rows="15"></textarea>
    </div>

    <div class="form-group row">
        <div class="col-offset-5 col-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
